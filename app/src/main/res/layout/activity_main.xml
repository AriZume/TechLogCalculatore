<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

</LinearLayout>
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="3">

<TextView
android:id="@+id/tvEquation"
android:layout_width="wrap_content"
android:layout_height="0dp"
android:layout_gravity="end"
android:textAlignment="textEnd"
android:paddingRight="30dp"
android:paddingLeft="30dp"
android:paddingTop="30dp"
android:layout_weight="1"
android:text="0"
android:textColor="@color/black"
android:textSize="30sp" />

<TextView
android:id="@+id/tvResult"
android:layout_width="wrap_content"
android:layout_height="0dp"
android:layout_gravity="end"
android:textAlignment="textEnd"
android:paddingRight="30dp"
android:layout_weight="1"
android:textColor="@color/black"
android:textSize="45sp" />

    </LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:orientation="vertical"
android:layout_weight="7">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <Button
        android:id="@+id/btnC"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:text="C"
        android:textColor="#E53935"
        android:textSize="25sp"
        android:onClick="clearOnClick"
        app:cornerRadius="0dp"
        app:icon="@null" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:text="⌫"
        android:textColor="#E53935"
        android:textSize="25sp"
        android:onClick="delOnClick"
        app:icon="@null" />

    <Button
        android:id="@+id/btnPow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:onClick="powerOfOnClick"
        android:text="^"
        android:textColor="#FFA018"
        android:textSize="25sp"
        app:icon="@null" />

    <Button
        android:id="@+id/btnSqrt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:text="√"
        android:textColor="#FFA018"
        android:textSize="25sp"
        android:onClick="sqrtOnClick"
        app:icon="@null" />

    <Button
        android:id="@+id/btnMod"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:text="%"
        android:textColor="#FFA018"
        android:textSize="25sp"
        android:onClick="modOnClick"
        app:icon="@null" />


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">


    <Button
        android:id="@+id/btnSin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:text="sin"
        android:textColor="#FFA018"
        android:textSize="18sp"
        android:onClick="sinOnClick"
        app:icon="@null" />

    <Button
        android:id="@+id/btnCos"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:text="cos"
        android:textColor="#FFA018"
        android:textSize="18sp"
        android:onClick="cosOnClick"
        app:icon="@null" />